body
	font-size 16px
	font-family $varela
	color $gray-light

	@media $tablet
		background #5A28BD
	@media $phone
		background #289CBD

figure

	margin 0

a

	color $secondary-color

a:hover,
a:link,
a:visited,
a:active

	color $secondary-color
	text-decoration none

h1,
.jumbotron h1

	font-size 3.375em

img

	vertical-align top

*:focus

	outline 0
